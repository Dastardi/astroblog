---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About Me";

const identity = {
  firstName: "Luke",
  country: "USA",
  occupation: "student",
  hobbies: ["music", "frisbee", "biking"],
};

const skills = ["Python", "HTML", "CSS", "JavaScript", "Astro", "Writing"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "green";
const fontWeight = "bold";
const textCase = "uppercase";
---
<BaseLayout pageTitle={pageTitle}>
    <style define:vars={{skillColor, fontWeight, textCase}}>
        h1 {
          color: purple;
          font-size: 4rem;
        }
        .skill {
            color: var(--skillColor);
            font-weight: var(--fontWeight);
            text-transform: var(--textCase)
        }
    </style>

    <h2>... and my new Astro site!</h2>
                
    <p>Here are a few facts about me:</p>
    <ul>
        <li>My name is {identity.firstName}.</li>
        <li>I live in {identity.country} and I work as a {identity.occupation}.</li>
        {identity.hobbies.length >= 2 &&
            <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
        }
    </ul>
    <p>My skills are:</p>
    <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>

    {happy && <p>I'm a happy individual</p>}

    {finished && <p>I'm finished learning things</p>}

    {goal === 3? <p>My goal is to make stuff happen.</p> : <p>My goals are complicated.</p>}
</BaseLayout>